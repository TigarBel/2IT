<Window x:Class="_2IT.CSelectUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2IT"
        mc:Ignorable="d"
        Title="CSelectUserWindow" Height="190" Width="220" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="170" VerticalAlignment="Top" Width="220" IsReadOnly="True" CanUserResizeColumns="False" CanUserResizeRows="False"/>
        <Button x:Name="buttonAccept" Content="Выбрать" HorizontalAlignment="Left" Margin="0,170,0,0" VerticalAlignment="Top" Width="74" Click="ButtonAccept_Click"/>
        <Button x:Name="buttonCancel" Content="Отмена" HorizontalAlignment="Left" Margin="145,170,0,0" VerticalAlignment="Top" Width="75" Click="ButtonCancel_Click"/>

    </Grid>
</Window>
